@model BirthdayCard.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <title>Birthday Card Generator</title>
    <style>
        .header {
            padding: 60px;
            background: #171717;
            color: gray;
            font-size: 16px;
        }

        body {
            background-color: #f1f1f1;
        }
    </style>
</head>
<body>
    <div class=" = header">
        <h1>Birthday Card Generator</h1>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <h4>Send a Birthday Card</h4>
            <form asp-action="SendCard">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="From" class="control-label"></label>
                    <input asp-for="From" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="To" class="control-label"></label>
                    <input asp-for="To" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Message" class="control-label"></label>
                    <input asp-for="Message" class="form-control" />
                </div>
                <div class="btn btn-success">
                    <input type="submit" value="Send Card" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

</body>
</html>
